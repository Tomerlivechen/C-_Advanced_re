<Window x:Class="Frogger.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frogger"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="About the application" FontSize="23" FontWeight="ExtraBlack" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" Text ="This application was developed for playing the basic game Frogger using WPF. It utilizes object-oriented programming, static classes, and custom message boxes and input boxes, a JSON array to store scores, and a canvas structure. The assets were taken from the web." />
    </Grid>
</Window>
