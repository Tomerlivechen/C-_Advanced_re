<Window x:Class="Recursive.RecursiveFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recursive"
        mc:Ignorable="d"
        Title="RecursiveFolder" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Button Content="Sekect Folder" Margin="5" Click="Button_Click"/>
            <TextBlock Text="Selected Folder" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Name="SelectedRoot" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>
        <TreeView x:Name="TV_data"/>
    </DockPanel>
</Window>
